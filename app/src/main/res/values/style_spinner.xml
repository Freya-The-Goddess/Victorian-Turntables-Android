<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="spinnerView" >
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@drawable/bg_dropdown</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="spinnerItem" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style
        name="spinnerText"
        parent="@style/spinnerItem" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">@dimen/mediumTextSize</item>
        <item name="android:paddingStart">@dimen/editInputPadding</item>
        <item name="android:paddingEnd">@dimen/editInputPadding</item>
    </style>

    <style
        name="spinnerCheckbox"
        parent="@style/spinnerText">
        <item name="android:buttonTint">?attr/checkboxColor</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>
</resources>